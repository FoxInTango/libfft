PREPARE_TARGETS += prepare.libmath
PREPARE_URL_libmath = https://github.com/FoxInTango/libmath.git
ifdef REMOTE_ALL_IN_ONE
PREPARE_URL_libmath = wf@allinone.io:alpine/libmath.git
endif
PREPARE_DIR_libmath = $(DEPENDS_LIBRARY_PATH)/$(basename $(notdir $(PREPARE_URL_libmath)))
prepare.libmath:
	-git clone $(PREPARE_URL_libmath) $(PREPARE_DIR_libmath)
	-echo "SUPER_MAKE_DIR=${MAKE_FILE_DIR}"                >> $(PREPARE_DIR_libmath)/.make/super
	-echo "SUPER_MAKE_CONFIG_DIR=${MAKE_CONFIG_DIR}"       >> $(PREPARE_DIR_libmath)/.make/super
	-cd $(PREPARE_DIR_libmath) && make prepare
	-rm $(PREPARE_DIR_libmath)/.make/super
